  },
  "keywords": [
    "bun",
    "typescript",
    "utility",
    "utils",
    "array",
    "object",
    "string",
    "modern",
    "lightweight"
  ],
  "author": "Ijoo Yoon",
  "license": "MIT",
  "dependencies": {
    "word-wrap": "^1.2.5"
